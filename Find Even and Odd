
//Checking whether given number is Even or Odd...

<!DOCTYPE html>
<html>
<body>
	<form method="post">
		<h3>Checking Even and Odd</h3>
		Enter the Number;<br>
		<input type="number" name="number" id="number">
		<input type="submit" name="submit" id="submit">
		
	</form>

<?php
	if ($_POST) {
		$number=$_POST['number'];
			
			if ($number % 2 ==0) {
    echo "It's Even Number";
		}
	else{
		echo "It's Odd Number";
		}
	}
?>

</body>
</html>

